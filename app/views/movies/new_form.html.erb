<h1>Add A New Movie</h1>

<form action="/create_movie">
  <div>
    <label for="movie_title">Title:</label>
    <input id="movie_title" type="text" name="title">
  </div>
  <div>
    <label for="movie_image_url">Image URL:</label>
    <input id="movie_image_url" type="text" name="image_url">
  </div>
  <div>
    <label for="movie_year">Year(YYYY):</label>
    <input id="movie_year" type="text" name="year">
  </div>
  <div>
    <label for="movie_duration">Duration(minutes):</label>
    <input id="movie_duration" type="text" name="duration">
  </div>
  <div>
    <label for="movie_description">Description:</label>
    <input id="movie_description" type="text" name="description">
  </div>
  <div>
    <button>Create Movie Entry</button>
  </div>
</form>

<a href="/movies">Back to Movies</a>
