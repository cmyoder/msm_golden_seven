<a href="/directors">Directors</a>
<a href="/actors">Actors</a>
<a href="/movies">Movies</a>

<p><a href="http://localhost:3000/actors/new">Add a New Actor</a></p>

<table>
  <tr>
    <th>Picture</th>
    <th>Actor</th>
    <th colspan="2">Actions</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <a href="/actors/<%= actor.id %>"><%= actor.name %></a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
